doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://fonts.googleapis.com/css?family=Lato:300,300i,700", rel="stylesheet")
    link(rel="stylesheet", href="css/style.css")
    link(rel="shortcut icon", type="image/png", href="img/favicon.png")
    title Natours | Exciting tours for adventurous people
  body
		// HEADER
    header.header
      nav.nav.nav--tours
        a.nav__el(href="#") All tours
        form.nav__search
          button.nav__search-btn
            svg
              use(xlink:href="img/icons.svg#icon-search")
          input(type="text", placeholder="Search tours", class="nav__search-input")
      .header__logo
        img(src="img/logo-white.png", alt="Natours logo")
      nav.nav.nav--user
        a.nav__el(href="#") My bookings
        a.nav__el
          img(src="img/user.jpg", alt="User photo", class="nav__user-img")
          span Jonas
		// CONTENT
    main.main
      .card-container
        each tour in tours
          .card
            .card__header
              .card__picture
                .card__picture-overlay&nsbp;
                img(src=`img/tour-${tour.number}-cover.jpg`, alt=tour.name, class="card__picture-img")
              h3.heading-tertirary
                span=tour.name
            .card__details
              h4.card__sub-heading=tour.duration
              p.card__text=tour.description
              each data in tour.data
                .card__data
                  svg.card__icon
                    use(xlink:href=`img/icons.svg#icon-${data.icon}`)
                  span=data.text
            .card__footer
              p
                span.card__footer-value=tour.price
                span.card__footer-text per person
              p.card__ratings
                span.card__footer-value=tour.rating
                span.card__footer-text rating (#{tour.reviews})
              a.btn.btn--green.btn--small(href=tour.link) Details
		// FOOTER
    .footer
      .footer__logo
        img(src="img/logo-green.png", alt="Natours logo")
      ul.footer__nav
        li: a(href="#") About us
        li: a(href="#") Download apps
        li: a(href="#") Become a guide
        li: a(href="#") Careers
        li: a(href="#") Contact
      p.footer__copyright
        | &copy; by Jonas Schmedtmann. All rights reserved.